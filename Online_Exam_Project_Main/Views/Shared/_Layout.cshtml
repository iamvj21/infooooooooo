<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Online Examination</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Online Examination", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                      @if (Session["candidate_name"] != null)
{                   

                    <li style="margin-left: 800px;color: white; margin-top: 15px">Hello @Session["candidate_name"] </li>

                    <li>@Html.ActionLink("Logout", "Logout", "Candidate")</li>
                    }
                    else
                    {
                            <li>@Html.ActionLink("Registration", "Create", "Candidate")</li>
                            <li>@Html.ActionLink("Login", "Login", "Candidate")</li>
                 
                    }
                    
                    
                    
                    @if (Session["admin_name"] != null)
                    {
                        <li style="margin-left: 600px;color: white; margin-top: 15px">Hello @Session["admin_name"] </li>
                        <li>@Html.ActionLink("Logout", "Logout", "Admin")</li>
                    }
                    
                    
                </ul>
            </div>
        </div>
    </div>
    
    @if (Session["admin_name"] != null)
    {

        <div class="navbar navbar-inverse" style=" width: 140px; position: fixed; border-radius: 0; height: 100%;">
            <a class="navbar-brand" href="#">ADMIN SITE</a>
            <ul class="nav navbar-nav">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">ADMIN <span class="caret"></span></a>
                    <ul class="dropdown-menu" role="menu">
                        <li>@Html.ActionLink("Index", "Index", "Admin")</li>
                        <li class="divider"></li>
                        <li> @Html.ActionLink("Create", "Create", "Admin")</li>
                        <li class="divider" style="background-color: white"></li>

                    </ul>
                </li>

                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">CANDIDATE <span class="caret"></span></a>
                    <ul class="dropdown-menu" role="menu">
                        <li>@Html.ActionLink("Index", "Index", "Candidate")</li>
                        <li class="divider"></li>
                        <li> @Html.ActionLink("Create", "Create", "Candidate")</li>


                    </ul>
                </li>
                <li class="divider"></li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">RESULT <span class="caret"></span></a>
                    <ul class="dropdown-menu" role="menu">
                        <li>@Html.ActionLink("Index", "Index", "Result")</li>
                        <li class="divider"></li>
                        <li> @Html.ActionLink("Create", "Create", "Result")</li>

                    </ul>
                </li>



                <li class="divider"></li>



                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">SUBJECT <span class="caret"></span></a>
                    <ul class="dropdown-menu" role="menu">
                        <li>@Html.ActionLink("Index", "Index", "Subject")</li>
                        <li class="divider"></li>
                        <li> @Html.ActionLink("Create", "Create", "Subject")</li>

                    </ul>
                </li>
                <li class="divider"></li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">EXAM <span class="caret"></span></a>
                    <ul class="dropdown-menu" role="menu">
                        <li>@Html.ActionLink("Index", "Index", "Exam")</li>
                        <li class="divider"></li>
                        <li> @Html.ActionLink("Create", "Create", "Exam")</li>

                    </ul>
                </li>

                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">QUESTION <span class="caret"></span></a>
                    <ul class="dropdown-menu" role="menu">
                        <li>@Html.ActionLink("Index", "Index", "Question")</li>
                        <li class="divider"></li>
                        <li> @Html.ActionLink("Create", "Create", "Question")</li>

                    </ul>
                </li>



            </ul>
        </div>
    } 
    @if (Session["admin_name"] != null )
    {


        <div class="container body-content" style="margin-left :150px">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Online Examination System</p>
            </footer>
        </div>


    }
        
   else {
        <div class="container body-content" style="">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Online Examination System</p>
        </footer>
    </div>
}
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    

    @RenderSection("scripts", required: false)
</body>
</html>
